{
    "name": "concerto-cms-api",
    "version": "0.1.0",
    "description": "Api for the Concerto headless CMS",
    "main": "dist",
    "scripts": {
        "start": "nodemon -w src --exec \"babel-node src --presets es2015,stage-0\"",
        "build": "babel src -s -D -d dist --presets es2015,stage-0",
        "serve": "node dist",
        "prestart": "npm run -s build",
        "test": "eslint src"
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": 7,
            "sourceType": "module"
        },
        "env": {
            "node": true,
            "es6": true
        },
        "rules": {
            "no-console": 0,
            "no-unused-vars": 1
        }
    },
    "repository": "concerto-cms/api",
    "author": "Mathieu Maes <mathieu@webberig.be>",
    "license": "BSD-3-Clause",
    "dependencies": {
        "auth0-js": "^9.3.0",
        "body-parser": "^1.13.3",
        "compression": "^1.5.2",
        "cors": "^2.7.1",
        "express": "^4.13.3",
        "express-jwt": "^5.3.0",
        "express-validator": "^3.2.0",
        "mongoose": "^4.10.2",
        "morgan": "^1.8.0",
        "resource-router-middleware": "^0.6.0",
        "swagger-express-router": "^1.0.0",
        "swagger-ui-express": "^2.0.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.9.0",
        "babel-preset-es2015": "^6.9.0",
        "babel-preset-stage-0": "^6.5.0",
        "eslint": "^4.18.2",
        "nodemon": "^1.9.2"
    }
}
